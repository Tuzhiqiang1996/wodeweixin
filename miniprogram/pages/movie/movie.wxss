.movie {
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #eee;
}
.movie-img{
  width: 200rpx;height: 300rpx;
  margin-right: 20rpx;
  border-radius:2rpx;
  box-shadow: 2px 2px 10px;
}
.moive-info {
  flex: 1;
font-size: 28rpx;
/* 行高间距离 */
line-height: 1.8;
}

.moive-title {
  font-size:40rpx;
  color: #666;

}

.moive-score {
  color: #faaf00;
}

.moive-comment {
  height: 50rpx;
  background:#e54847;
  background: linear-gradient(to right, #00c3ff,#6DD5FA,#ffff1c);
  color: #fff;
  font-size: 26rpx;
